/* pages/test/test.wxss */
.main_container{
  display: flex;
  flex-direction: column;
  width: 100%;
  position: fixed;
  /* overflow-x: hidden; */
}

.banner{
  display: flex;
  width: 90%;
  margin: 5%;
  height: 280rpx;
  background-color: white;
  border-radius: 18rpx;
  
}
.view_table{
  display: table;
    width: 750rpx;

}
.view_row{
  display: table-row;
  border-bottom: 1px solid black;
  line-height: 80rpx;
}

.view_row1{
  display: table-row;
  border-bottom: 1px solid black;
  line-height: 100rpx;
}

.view_cell1{
  display: table-cell;
  width: 30%;

}

.view_cell2{
  display: table-cell;
  /* width: 20%; */

}

.day{
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx;
}

.train_num1{
  color: green;
  font-size: 50rpx;
  font-weight: bold;
  margin: 30rpx
}

.train_num2{
  color: black;
  font-size: 40rpx;
  font-weight: bold;
  margin: 30rpx 
}
.text_light{
  font-size: 20rpx;
  
}


.body{
  display: flex;
  width: 100%;
  /* height: 100%; */
  flex-direction: column;
  background-color: white;
  border-radius: 18rpx;


}

.body_title{
  display: flex;
  width:100%;
  height: 15%;
}

.title_style{
  display: flex;
  margin: 30rpx;
  font-weight: bold;
  font-size: 40rpx;
}

.body_container{
  display: flex;
  width: 100%;
  height: 85%;


}















.movie-container{
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 500px;
  margin-left: 5%;
  /* height: 60%; */
}
.navbar{
  display: flex;
  position: absolute;
  /* left: 0;
  top: 40%; */
  /* z-index: 500; */
  width: 90%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 13px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 5px solid #494949;

  color: #494949;
}

.movie-content-wrapper{
  padding-top: 50px;
  height: 500px;
}


.scroll_data{
  display: flex;
  height: 500px;
}

.swiper{
  display: flex;
  height: 500px;
}






.view_item{
    display: flex;
    height: 50px;
    background-color: white;
    padding: 8px 0;
    justify-content: center;
    border-bottom: 1px solid #f3f3f3;
}

.nav-item {
    height: 80px;
    background-color: white;
    display: flex;
    padding: 8px 0;

    border-bottom: 1px solid #f3f3f3;
}

.item-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav-item .icon {
    margin: 20px 10px;
    height: 40px;
    width: 40px;
}

.nav-item .text {
    font-size: 12px;
}

.nav-item .arrow {
    margin: 10px 10px 10px auto;
    font-size: 10px;
}