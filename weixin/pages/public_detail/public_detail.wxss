    justify-content: left;
    flex-direction: row;
    border-bottom: 1px solid #f3f3f3;
}


.nav-item1 {
    height: 80px;
    background-color: white;
    display: flex;
    padding: 8px 0;
    width: 100%;
    justify-content: center;
