}

.nav-item {
    height: 80px;
    background-color: white;
    display: flex;
    padding: 8px 0;

    border-bottom: 1px solid #f3f3f3;
}

.item-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav-item .icon {
    margin: 20px 10px;
    height: 40px;
